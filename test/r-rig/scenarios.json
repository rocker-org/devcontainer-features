{
	"rpackages-source-install": {
		"image": "debian:stable-slim",
		"features": {
			"r-rig": {
				"vscodeRSupport": "full",
				"installDevTools": true,
				"installRMarkdown": true,
				"installJupyterlab": true,
				"installRadian": true
			}
		}
	},
	"latest-pandoc": {
		"image": "ubuntu:latest",
		"features": {
			"r-rig": {
				"installRMarkdown": true,
				"pandocVersion": "latest"
			}
		}
	},
	"os-pandoc": {
		"image": "ubuntu:latest",
		"features": {
			"r-rig": {
				"installRMarkdown": true,
				"pandocVersion": "os-provided"
			}
		}
	},
	"version-latest": {
		"image": "debian:stable-slim",
		"features": {
			"r-rig": {
				"version": "latest"
			}
		}
	},
	"install-on-rocker-r-ver": {
		"image": "rocker/r-ver:4.0.5",
		"features": {
			"r-rig": {
				"version": "none",
				"installRMarkdown": true,
				"installJupyterlab": true
			}
		}
	}
}
