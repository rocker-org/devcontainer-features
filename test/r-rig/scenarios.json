{
	"rpackages-source-install": {
		"image": "debian:stable-slim",
		"features": {
			"r-rig": {
				"installRMarkdown": true
			}
		}
	},
	"latest-pandoc": {
		"image": "ubuntu:latest",
		"features": {
			"r-rig": {
				"installRMarkdown": true,
				"pandocVersion": "latest"
			}
		}
	},
	"os-pandoc": {
		"image": "ubuntu:latest",
		"features": {
			"r-rig": {
				"installRMarkdown": true,
				"pandocVersion": "os-provided"
			}
		}
	},
	"version-latest": {
		"image": "debian:stable-slim",
		"features": {
			"r-rig": {
				"version": "latest"
			}
		}
	}
}
