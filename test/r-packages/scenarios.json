{
	"install-cli-rlang": {
		"image": "rocker/r-ver:4",
		"features": {
			"r-packages": {
				"packages": "cli,rlang"
			}
		}
	},
	"install-from-github": {
		"image": "rocker/r-ver:4",
		"features": {
			"r-packages": {
				"packages": "github::r-lib/crayon"
			}
		}
	},
	"install-from-r-universe": {
		"image": "rocker/r-ver:4",
		"features": {
			"apt-packages": {
				"packages": "libxml2-dev"
			},
			"r-packages": {
				"packages": "rversions",
				"additionalRepositories": "rhub = 'https://r-hub.r-universe.dev', jeroen = 'https://jeroen.r-universe.dev'"
			}
		}
	},
	"install-stable-pak": {
		"image": "rocker/r-ver:4",
		"features": {
			"r-packages": {
				"packages": "cli,rlang",
				"pakVersion": "stable"
			}
		}
	},
	"install-after-r-apt": {
		"image": "debian:stable-slim",
		"features": {
			"r-apt": {},
			"r-packages": {
				"packages": "R6"
			}
		}
	}
}
